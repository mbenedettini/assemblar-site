---
import Input from './Input.astro';
import Textarea from './Textarea.astro';
---

<form id='form-contact' class='flex flex-col gap-6'>
  <Input name='name' label='Name' placeholder='Input your name'>
    <svg
      slot='icon'
      width='24'
      height='24'
      viewBox='0 0 24 24'
      fill='none'
      xmlns='http://www.w3.org/2000/svg'
    >
      <path
        d='M12 4C13.0609 4 14.0783 4.42143 14.8284 5.17157C15.5786 5.92172 16 6.93913 16 8C16 9.06087 15.5786 10.0783 14.8284 10.8284C14.0783 11.5786 13.0609 12 12 12C10.9391 12 9.92172 11.5786 9.17157 10.8284C8.42143 10.0783 8 9.06087 8 8C8 6.93913 8.42143 5.92172 9.17157 5.17157C9.92172 4.42143 10.9391 4 12 4ZM12 14C16.42 14 20 15.79 20 18V20H4V18C4 15.79 7.58 14 12 14Z'
        fill='#B7B9C5'
      >
      </path>
    </svg>
  </Input>

  <Input name='email' label='Email' placeholder='Input your email'>
    <svg
      slot='icon'
      width='24'
      height='24'
      viewBox='0 0 24 24'
      fill='none'
      xmlns='http://www.w3.org/2000/svg'
    >
      <path
        d='M20 4H4C2.9 4 2.01 4.9 2.01 6L2 18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V6C22 4.9 21.1 4 20 4ZM20 8L12 13L4 8V6L12 11L20 6V8Z'
        fill='#B7B9C5'
      >
      </path>
    </svg>
  </Input>

  <Textarea name='message' label='Message' placeholder='Message' />

  <button
    class='bg-white text-sm text-bunker font-bold rounded-lg p-4 my-2'
    type='submit'
  >
    Submit
  </button>
</form>

<script is:inline>
  const form = document.getElementById('form-contact');

  form.addEventListener('submit', (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());

    console.log(data);
  });
</script>
