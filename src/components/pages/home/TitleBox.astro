---
interface Props {
  title: string;
  bg?: string;
}

const { title, bg = 'bg-primary' } = Astro.props;
---

<div class='text-center mb-11 md:mb-16'>
  <span
    class={`text-2xl md:text-5xl font-black text-white px-1 md:px-7 py-1 leading-[4rem] ${bg}`}
  >
    {title}
  </span>
</div>
