---
import Layout from '../layouts/Layout.astro';
import Founder from '../components/pages/about-us/Founder.astro';
import Advisor from '../components/pages/about-us/Advisor.astro';
import { HeaderItem } from '../enums/headerEnums';

const advisors = [
  {
    image: '/images/advisor-1.webp',
    name: 'Jingsong Wang',
    position: 'VP Engineering, Gather',
    description:
      'Jingsong is a hands-on, impact-driven engineering leader with 15 years of experience in technology companies of all stages - from early-stage startups (FiveStars), to late-stage pre-IPO (Discord), to large public technology companies (Meta).',
  },
  {
    image: '/images/advisor-2.webp',
    name: 'Ori Damary',
    position: 'Engineering Leader & Startup Advisor, Self-Employed',
    description:
      'Ori brings nearly 20 years of experience in tech -- as a founder & Head of Engineering, a Software Engineer, an Engineering Manager, and as Chief of Staff to the CTO of a Fortune 500 company.',
  },
  {
    image: '/images/advisor-3.webp',
    name: 'Maricel Lomonico',
    position:
      'Lead Recruiter at Speak, former Talent Lead in different LatAm companies',
    description:
      'Maru is a Seasoned Recruiter Lead, experienced working in international companies (large and startups) and understanding the complexities of operating in a fast growing digital market. She has worked in various industries like e- commerce, fintech, insurtech and real estate helping startups scale up based on principles of innovation and moving fast.',
  },
];
---

<Layout title='About Us | Assemblar' currentPath={HeaderItem.About}>
  <h1 class='text-center text-4xl md:text-6xl font-black py-9 md:py-14'>
    About Us
  </h1>

  <div class='mb-24'>
    <Founder />
  </div>

  <div class='flex flex-col md:flex-row gap-10 md:gap-14 items-center mb-16 md:mb-12'>
    <div class='md:grow mx-auto'>
      <p
        class='md:whitespace-nowrap px-4 md:px-5 py-1 bg-primary text-2xl md:text-4xl font-black leading-8 md:leading-[3.25rem]'
      >
        Board of Advisors
      </p>
    </div>
    <p class='text-sm md:text-base text-white/80 font-medium'>
      The company's advisors include former Facebook Engineering Leader, former
      Chief of Staff to the CTO of Compass, current Recruiting Leader at Speak.
    </p>
  </div>

  <div class='grid grid-cols-1 md:grid-cols-3 gap-6 mb-24'>
    {
      advisors.map((item) => (
        <Advisor
          image={item.image}
          name={item.name}
          position={item.position}
          description={item.description}
        />
      ))
    }
  </div>
</Layout>
